---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import { HookCard } from '../../components/HookCard';
import { parseArtifactId, createExcerpt } from '../../content.config';

const hooks = await getCollection('hooks');

// Parse hook name and description from markdown body
function parseHookBody(body: string) {
  const lines = body.split('\n');
  let name = '';
  let description = '';
  let foundH1 = false;

  for (const line of lines) {
    if (!foundH1 && line.startsWith('# ')) {
      name = line.replace(/^#\s+/, '').trim();
      foundH1 = true;
      continue;
    }
    if (foundH1 && line.trim() && !line.startsWith('#')) {
      description = line.trim();
      break;
    }
  }

  return { name, description };
}

const hookData = hooks.map(h => {
  const { slug } = parseArtifactId(h.id);
  const { name, description } = parseHookBody(h.body || '');
  return {
    id: h.id,
    slug,
    name: name || slug,
    description: createExcerpt(description, 150),
    event: h.data.event,
    matcher: h.data.matcher,
  };
});

// Sort alphabetically by name
hookData.sort((a, b) => a.name.localeCompare(b.name));

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout title="Hooks | Devkit">
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4
           focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-zinc-900
           focus:rounded focus:outline-none"
  >
    Skip to main content
  </a>

  <header class="sticky top-0 z-40 border-b border-[#E5E2D8] bg-[#FAF9F6]/90 backdrop-blur-xl">
    <nav aria-label="Site navigation" class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
      <a href={baseUrl || '/'} class="flex items-center gap-3 group">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-[#DB4545] to-[#c43d3d] flex items-center justify-center text-white font-bold text-sm">
          D
        </div>
        <span class="text-lg font-semibold text-[#0C0407] group-hover:text-[#DB4545] transition-colors">
          Devkit
        </span>
      </a>
      <div class="flex items-center gap-6">
        <a
          href={baseUrl || '/'}
          class="text-sm text-[#6E7191] hover:text-[#0C0407] transition-colors"
        >
          Skills
        </a>
        <a
          href={`${baseUrl}/hooks`}
          class="text-sm text-[#0C0407] font-medium"
        >
          Hooks
        </a>
        <a
          href={`${baseUrl}/commands`}
          class="text-sm text-[#6E7191] hover:text-[#0C0407] transition-colors"
        >
          Commands
        </a>
        <a
          href={`${baseUrl}/agents`}
          class="text-sm text-[#6E7191] hover:text-[#0C0407] transition-colors"
        >
          Agents
        </a>
        <a
          href="https://github.com/CadreAI/devkit"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-[#6E7191] hover:text-[#0C0407] transition-colors flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
          </svg>
          GitHub
        </a>
        <span class="text-sm text-[#6E7191]">{hookData.length} hooks</span>
      </div>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-[#FAF9F6] to-[#F5F3EE] py-20 px-6">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(219,69,69,0.06),transparent_70%)]" />
    <div class="relative max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold tracking-tight text-[#0C0407] mb-6">
        Event Hooks
      </h1>
      <p class="text-xl text-[#6E7191] max-w-2xl mx-auto">
        Automated responses to Claude Code lifecycle events. Block dangerous commands, format code, run tests, and more.
      </p>
    </div>
  </section>

  <main id="main-content" class="px-8 py-12">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {hookData.map(hook => (
          <HookCard hook={hook} baseUrl={baseUrl} />
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>
